# Keep three weeks worth of internal ndp logs
/var/log/ndp/control.log {
        daily
        rotate 21
        compress
        delaycompress
        copytruncate
        ifempty
}
/var/log/ndp/tengine-*.log {
        daily
        rotate 21
        compress
        delaycompress
        copytruncate
        ifempty
}
